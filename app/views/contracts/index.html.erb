<h1>Contracts</h1>

<div id="contracts">

  <% @contracts.each do |contract| %>
    <%if current_user && current_user == contract.owner%>   
      <p>
        <h1>Contract <%=contract.id%></h1>
        <p>Title: <%= contract.title %></p>
        <p>Description: <%= contract.desc %></p>
        <p>Kind: <%= contract.kind %></p>
        <p>Status: <%= contract.status %></p>
        <p>Payable? <%= contract.payable ? "Yes" : "No"%></p>
        <p>Owner: <%= contract.owner.name %></p>
        <p>Beneficiary: <%= contract.beneficiary.name %></p>
        <%= link_to "Delete this contract", user_contracts_url(current_user, contract), :confirm => "Are you sure?", :method => :delete%>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "Back", root_path%>
