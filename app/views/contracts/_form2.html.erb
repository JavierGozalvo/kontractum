<div style="min-width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)">
  <div class="text-center">
  <h2>Edit Contract</h2>
  </div>
    <%= form_with model: (contract), url: user_contract_path(current_user, contract.id), data: { turbo: false } do |f| %>
      <%if contract.errors.any? %>
        <div>
          <% contract.errors.full_messages.each do |message|%>
            <div><%= message %></div>
          <%end%>
        </div>
      <%end%>
  <div class="EditContractBox">
    <div class="col-md-12 order-md-1">
      <div class="row justify-content-between">
          <div class="mb-3">
            <strong><%= f.label :title %></strong><br />
            <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
          </div>
          <div class="mb-3">
            <strong><%= f.label :kind %></strong><br />
            <%= f.text_field :kind, autofocus: true, autocomplete: "city" %>
          </div>
      </div>

      <div class="row justify-content-start">
          <div class="mb-3">
            <strong><%= f.label :desc %></strong><br />
            <%= f.text_area :desc, autofocus: true, :style=>"width: 200%",autocomplete: "desc" %>
          </div>
      </div>

      <div class="row justify-content-between">
          <div class="mb-3">
            <strong><%= f.label :status %></strong><br />
            <%= f.select :status, [:expired, :drafted, :approved, :proposed, :modification_requested, :payment_in_progress, :paid] %>
          </div>

          <div class="mb-3">
            <strong><%= f.label :beneficiary %></strong><br />
            <%=  contract.beneficiary.name %>
          </div>

          <div class="mb-3">
            <strong><%= f.label :payable %></strong><br />
            <%= f.select :payable, [true, false]%>
          </div>
      </div>
      
      <div class="row justify-content-around">
          <div class="actions">
            <%= f.submit "Update Changes", :class => "btn btn-success" %>
          </div>
          <div>
          <%= link_to "back", root_path, :class => "btn btn-secondary" %>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>