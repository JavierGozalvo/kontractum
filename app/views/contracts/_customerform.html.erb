<div class="mb-3 CustomerForm">
	<h3 class="text-center">Advanced search</h3>
		<%= form_with(url: user_contracts_path(current_user), method: "get", local: true, data: {turbo: "false"}) do |f|%>
		<div class="col-md-12 order-md-1">
			<div class="row justify-content-around align-middle">
				<p><strong>Title:</strong> <%= text_field_tag :title, params[:title] %></p>
				<p><strong>Payable?</strong>
						Yes: 	<%= radio_button_tag :payable, true, params[:payable] == "true"%>
						No: 	<%= radio_button_tag :payable, false, params[:payable] == "false"%></p>
				<p><strong>Search by:</strong>
						Owner: 	<%= radio_button_tag :user_kind, true, params[:user_kind] == "true"%>
						Beneficiary: 	<%= radio_button_tag :user_kind, false, params[:user_kind] == "false" %></p>
			</div>
			<div class="row justify-content-center align-middle">
				<span class="m-3"><%= button_tag(type: "submit", class: "btn btn-secondary") do %>
							Search <i class="fa fa-search" aria-hidden="true"></i>
						<%end%></span>
				<span class="m-3"><%= link_to "Clear all", user_contracts_path(current_user), :class => "btn btn-danger" %></span>
				<span class="m-3"><%= link_to "Back to dashboard", root_path, class: "btn btn-primary"%></span>
			</div>
			<% end %>
			
		</div>
</div>