<div style="min-width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)">
<div class="text-center">
  <h2>Edit your profile</h2>
</div>

<%= form_with model: current_user, url: edit_profile_path, data: { turbo: false } do |f| %>
  <%if current_user.errors.any? %>
		<div>
			<% current_user.errors.full_messages.each do |message|%>
				<div><%= message %></div>
			<%end%>
		</div>
	<%end%>
<div class="EditProfileBox">
  <div class="col-md-12 order-md-1">
    <div class="row justify-content-around">
        <div class="mb-3">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="mb-3">
          <%= f.label :surname %><br />
          <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
        </div>
    </div>
    <div class="row justify-content-around">
        <div class="mb-3">
          <%= f.label :city %><br />
          <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
        </div>

        <div class="mb-3">
          <%= f.label :address %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="mb-3">
          <%= f.label :postalcode %><br />
          <%= f.text_field :postalcode, autofocus: true, autocomplete: "postalcode" %>
        </div>
    </div>
      <br/>
    <div class="row justify-content-around">
        <div class="actions">
          <%= f.submit "Update Changes", :class => "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Back", root_path, :class => "btn btn-secondary"%>
    </div>
  </div>
</div>
</div>

