<h2>Edit your profile</h2>


<%= form_with model: current_user, url: edit_profile_path, data: { turbo: false } do |f| %>
  <%if current_user.errors.any? %>
		<div>
			<% current_user.errors.full_messages.each do |message|%>
				<div><%= message %></div>
			<%end%>
		</div>
	<%end%>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

	<div class="field">
    <%= f.label :surname %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :postalcode %><br />
    <%= f.text_field :postalcode, autofocus: true, autocomplete: "postalcode" %>
  </div>

<br/>

  <div class="actions">
    <%= f.submit "Update Changes" %>
  </div>
<% end %>

<%= link_to "Back", :back%>

