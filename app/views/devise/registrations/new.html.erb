  <div style="min-width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)">
    <div class="text-center">
      <h2>Sign up</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="NewRegistrationBox">
      <div class="col-md-12 order-md-1">  
        <div class="row justify-content-between">    
            <div class="mb-3">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="mb-3">
              <%= f.label :surname %><br />
              <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
            </div>

            <div class="mb-3">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
        </div>
        <div class="row justify-content-between"> 
            <div class="mb-3">
              <%= f.label :doc_id %><br />
              <%= f.text_field :doc_id, autofocus: true, autocomplete: "doc_id" %>
            </div>

            <div class="mb-3">
              <%= f.label :doc_kind %><br />
              <%= f.select :doc_kind, [:dni, :driver_license, :passport] %>
            </div>

            <div class="mb-3">
              <%= f.label :birthdate %><br />
              <%= f.text_field :birthdate, autofocus: true, autocomplete: "birthdate" %>
            </div>
        </div>
        <div class="row justify-content-between"> 
            <div class="mb-3">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>

            <div class="mb-3">
              <%= f.label :city %><br />
              <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
            </div>

            <div class="mb-3">
              <%= f.label :postalcode %><br />
              <%= f.text_field :postalcode, autofocus: true, autocomplete: "postalcode" %>
            </div>
        </div>
        <div class="row justify-content-around"> 
            <div class="mb-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
        </div>
        <div class="row justify-content-around"> 
            
            <div class="actions">
              <%= f.submit "Sign up", "data-turbo": false , :class => "btn btn-primary"%>
            </div>


            <%= link_to "Back", root_path, :class => "btn btn-secondary"%>
            
        </div>
      </div>
    </div>
  </div>
  </div>
  <% end %>
</div>

